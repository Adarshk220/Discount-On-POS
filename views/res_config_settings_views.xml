<odoo>
    <record id="res_config_settings_view_form_inherit_discount_on_pos" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.discount_on_pos</field>
    <field name="model">res.config.settings</field>
    <field name="priority" eval="25"/>
    <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
    <field name="arch" type="xml">
        <xpath expr="//setting[@id='pos-loyalty']" position="after">
            <setting id="disc">
                <field name="discount_percentage_or_amount"/>
                <field name="discount_type" invisible="discount_percentage_or_amount == False"/>
            </setting>
        </xpath>
    </field>
</record>
</odoo>
